{
  "manifest_version": 3,
  "name": "Bookmark Shelf",
  "version": "1.0",
  "description": "A simple browser extension to manage your bookmarks.",
  "icons": {
    "48": "icons/icons8-book-64.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["lib/browser-polyfill.min.js", "js/background.js"]
  },
  "permissions": ["identity", "bookmarks"]
}
