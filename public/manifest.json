{
  "manifest_version": 3,
  "name": "Bookmark Shelf",
  "version": "1.0",
  "description": "A simple browser extension to manage your bookmarks.",
  "browser_specific_settings": {
    "gecko": {
      "id": "{bb91ba8b-159b-4c9a-8ee2-d040f8a3de9b}"
    }
  },
  "icons": {
    "48": "icons/icons8-book-64.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["lib/browser-polyfill.min.js", "assets/background.js"]
  },
  "permissions": ["identity", "bookmarks", "storage"]
}
